<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Bookings</title>

    <style>
        th {
            font-size: x-large;
            padding: 10px;
            min-width: 170px; /* Set a minimum width for each header cell */
        }

        td {
            padding: 20px;
            text-align: center;
        }

        .delete {
            background-color: red;
            border: solid 1px #333;
        }

        .delete:hover {
            background-color: rgb(197, 0, 0);
        }

        .edit {
            border: solid 1px #333;
        }

        .edit:hover {
            background-color: lightgray;
        }

        button {
            border-radius: 3px;
            padding: 5px;
        }

        .booking-row {
            background-color: rgba(255, 255, 255, 0.791);
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
        }

        h1 {
            margin-left: 20px;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px; /* Adds space between rows */
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <h1>Your Bookings</h1>
    <table>
        <tr class="header">
            <th>Room Type</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Guests</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Actions</th>
        </tr>

        <% for(let i = 0; i < bookings.length; i++) { %>
            <tr class="booking-row">
                <td>
                    <div>
                        <a href="/booking/<%= bookings[i].id %>">
                            <img src="/images/<%= bookings[i].roomType %>.jpeg" style="width: 100px; height: 50px;"><br>
                            <div class="abc">
                                <%= bookings[i].roomType %>
                            </div>
                        </a>
                    </div>
                </td>
                <td><%= bookings[i].name %></td>
                <td><%= bookings[i].contact %></td>
                <td><%= bookings[i].guests %></td>
                <td><%= new Date(bookings[i].checkin).toLocaleDateString('en-GB') %></td>
                <td><%= new Date(bookings[i].checkout).toLocaleDateString('en-GB') %></td>
                <td>
                    <a href="/editbooking/<%= bookings[i].id %>"><button class="edit">Edit</button></a>
                    <a href="/deletebooking/<%= bookings[i].id %>" onclick="return confirm('Are you sure you want to delete this booking?')"><button class="delete">Delete</button></a>
                </td>
            </tr>
        <% } %>
    </table><br>
</body>
</html>
